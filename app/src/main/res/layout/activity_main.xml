<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	android:padding="8dp"
	android:orientation="vertical"
	tools:context="com.intergalacticpenguin.raspboard.MainActivity">

	<TextView
		android:id="@+id/debug_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|start"
		android:textColor="@android:color/white"
		tools:text="debug text"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/world_news_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|start"
			android:text="@string/world_news_title"
			android:textColor="@android:color/white"
			android:textSize="32sp"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/world_news_recycler"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:paddingTop="8dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tech_news_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|start"
			android:text="@string/tech_news_title"
			android:textColor="@android:color/white"
			android:textSize="32sp"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/tech_news_recycler"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

</LinearLayout>
